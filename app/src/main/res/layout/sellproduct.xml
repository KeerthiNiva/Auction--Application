<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbg"
        android:layout_margin="2dp"
        android:id="@+id/user_lay"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_txt"
            android:textSize="24dp"
            android:text="karthi"
            android:layout_toLeftOf="@+id/odatesj"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="2019-02-20"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:id="@+id/odatesj"
            android:textSize="24dp"
            android:layout_alignParentRight="true"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phno_txt"
            android:textSize="24dp"
            android:layout_below="@+id/name_txt"
            android:text="9659599191"
            android:layout_toLeftOf="@+id/ratesorder"
            android:textColor="@color/white"
            android:layout_margin="5dp"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="2000"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:id="@+id/ratesorder"
            android:layout_below="@+id/name_txt"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"

            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sellproducts"
            android:textSize="24dp"
            android:layout_below="@+id/phno_txt"
            android:text="Sell Products"
            android:textColor="@color/white"
            android:background="#0A8A4D"
            android:layout_margin="5dp"
            />

    </RelativeLayout>


</RelativeLayout>